<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.caicai.criminalintent" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".App">
        <activity
            android:name=".activity.CriminalActivity"
            android:label="@string/app_name" >
        </activity>

        <activity android:name=".activity.CriminalListActivity" android:label="@string/app_name">
        </activity>

        <activity android:name=".activity.CriminalPagerActivity" android:label="@string/app_name"/>

        <activity android:name=".meitu.MainActivity">
        </activity>
        <activity android:name=".media.HelloMoonActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.easemob.chat.EMChatService" />

        <meta-data
            android:name="EASEMOB_APPKEY"
            android:value="caicai#criminalintent" />

    </application>

</manifest>
