<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/zhibo_pics_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:maxLines="2"
        android:lineSpacingExtra="3dp"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="#343434"
        android:layout_marginBottom="-6dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_pic0"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/job_cate_zhibo"/>

        <ImageView
            android:id="@+id/iv_pic1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:src="@drawable/job_cate_zhibo"/>

        <ImageView
            android:id="@+id/iv_pic2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:src="@drawable/job_cate_zhibo"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="14dp"
        >
        <TextView
            android:id="@+id/tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/zan"
            android:text="1234"
            android:textSize="12sp"
            android:textColor="#717171"
            android:drawablePadding="3dp"
            />

        <TextView
            android:id="@+id/tv_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawableLeft="@drawable/see"
            android:text="23"
            android:textSize="12sp"
            android:textColor="#717171"
            android:drawablePadding="2dp"
            android:layout_toLeftOf="@id/tv_zan"
            />
        <LinearLayout
            android:id="@+id/auto_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_see"
            android:layout_centerVertical="true"
            android:orientation="horizontal"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="#e8e8e8"
        />

</LinearLayout>